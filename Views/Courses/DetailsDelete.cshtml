@model Contoso_University.Models.Course

@{
    ViewData["Details"] = ViewBag.Title;
}
<h1>@ViewBag.Title</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId);
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId);
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title);
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title);
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Credits);
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Credits);
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    @{
        if (ViewBag.Title == "Details")
        {
            <a asp-action="CreateEdit" asp-route-id="@Model.CourseId" class="btn btn-warning">Edit</a>
            <a asp-action="Clone" asp-route-id="@Model.CourseId" class="btn btn-secondary">Clone</a>
        }
        else
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="@Model.CourseId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        }
    }
</div>